<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="e.book.store.CreateNewPasswordController">
    <stylesheets>
        <URL value="@createnewpassword.css" />
    </stylesheets>
   <styleClass>
      <String fx:value="mainFxmlClass" />
      <String fx:value="Buttons" />
      <String fx:value="TextColor" />
   </styleClass>
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="42.0" layoutY="129.0" prefHeight="38.0" prefWidth="240.0" text="Create a new Password" textFill="WHITE">
         <font>
            <Font name="Century Gothic Bold" size="18.0" />
         </font>
      </Label>
      <Button layoutX="14.0" layoutY="545.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="81.0" text="Back">
         <styleClass>
            <String fx:value="Buttons" />
            <String fx:value="TextColor" />
         </styleClass>
         <font>
            <Font name="Century Gothic" size="14.0" />
         </font>
      </Button>
      <Button layoutX="455.0" layoutY="523.0" mnemonicParsing="false" onAction="#OnConfirmClick" text="Confirm">
         <styleClass>
            <String fx:value="Buttons" />
            <String fx:value="TextColor" />
         </styleClass>
         <font>
            <Font name="Century Gothic Bold" size="18.0" />
         </font>
      </Button>
      <PasswordField fx:id="NewPassword" layoutX="42.0" layoutY="246.0" prefHeight="26.0" prefWidth="240.0" promptText="New Password" />
      <PasswordField fx:id="ConfirmPassword" layoutX="42.0" layoutY="315.0" prefHeight="26.0" prefWidth="232.0" promptText="Confirm New Password" />
   </children>
</AnchorPane>
