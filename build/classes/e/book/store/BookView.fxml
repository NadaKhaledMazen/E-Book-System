    <stylesheets>
        <URL value="@bookview.css" />
    </stylesheets>
   <children>
      <ImageView fx:id="imageView" fitHeight="329.0" fitWidth="212.0" layoutX="15.0" layoutY="151.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="BookName" alignment="CENTER" contentDisplay="CENTER" layoutX="140.0" layoutY="24.0" prefHeight="20.0" prefWidth="541.0" text="Book Name" textAlignment="CENTER" textFill="WHITE" underline="true">
